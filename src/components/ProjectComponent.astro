---
const { project } = Astro.props
---

<article class="flex flex-col group md:flex-col ">

    <div class="w-full md:w-1/2 mt-2">
        <h3 class="text-2xl text-yellow-300/50">
            { project.title }
        </h3>
    </div>

    <div class="w-full md:w-1/2 mt-2">
        <div class="image-section flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img src={project.image}  class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:group-hover:scale-105" loading="lazy" alt="Project Image">
        </div>
    </div>

    <div class="w-full md:w-1/2 md:max-w-lg mt-2 text-gray-700 dark:text-gray-400">
        <p class="mt-4">
            { project.description }
        </p>
    </div>

    <div class="flex flex-wrap mt-2">
        <ul class="flex flex-row mb-2 gap-x-2">
            {
                project.tags.map((tag) => (
                    <li>
                        <span class=`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>)
                )
            }
        </ul>
    </div>


</article>

