---
const { project } = Astro.props
---

<article class="flex flex-col gap-4 group md:flex-col ">
    <div class="w-full md:w-1/2 mt-2">
        <h3 class="text-2xl text-yellow-300/50">
            { project.title }
        </h3>
        <div class="image-section mt-2 flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img src={project.image}  class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:group-hover:scale-105" loading="lazy" alt="Project Image">
        </div>
        <p class="mt-4">
            { project.description }
        </p>
        <ul class="flex flex-row flex-wrap mt-4 mb-2 gap-2">
            {
                project.tags.map((tag) => (
                        <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-3`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                        </li>)
                )
            }
        </ul>
        {
            project.repo &&
                <div class="w-full md:w-1/2 md:max-w-lg flex flex-wrap mt-2">
                <span class="repo">
                    <a href={project.repo} target="_blank">{ project.repo }</a>
                </span>
                </div>
        }

        {
            project.links && project.links.map((link) => (
            <div class="w-full md:w-1/2 md:max-w-lg flex flex-wrap mt-2">
                <span class="repo">
                    <a href={link} target="_blank">{ link }</a>
                </span>
            </div>
            ))
        }

        <button class="bg-transparent mt-4 hover:bg-gray-700 text-gray-700 font-semibold hover:text-white py-2 px-4
                       border border-gray-600 hover:border-transparent rounded-full"
        >
            Learn More
        </button>
    </div>




</article>

